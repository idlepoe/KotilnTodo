<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@android:color/white"
    >

    <TextView
        android:id="@+id/item_textview_itemrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/check_checkbox_todolist"
        app:layout_constraintTop_toTopOf="@+id/check_checkbox_todolist" />

    <TextView
        android:id="@+id/timestamp_textview_itemrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="3dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <CheckBox
        android:id="@+id/check_checkbox_todolist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:clickable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/strike_imageview_itemrow"
        android:layout_width="334dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/check_checkbox_todolist"
        app:layout_constraintEnd_toStartOf="@+id/timestamp_textview_itemrow"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/check_checkbox_todolist"
        app:layout_constraintTop_toTopOf="@+id/check_checkbox_todolist"
        app:srcCompat="@drawable/strikethrough_foreground" />
</androidx.constraintlayout.widget.ConstraintLayout>